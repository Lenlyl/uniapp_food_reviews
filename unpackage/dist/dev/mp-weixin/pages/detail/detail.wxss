
.detail_container {
		display: flex;
		flex-direction: column;
		padding-top: 40rpx;
		padding-bottom: 86rpx;
}
.container_up {
		padding-left: 32rpx;
		padding-right: 32rpx;
}
.detail_content {
		display: flex;
		border-bottom: 1px solid #ddd;
		padding-bottom: 20rpx;
}
.imgContainer {
		border: 1rpx solid #ddd;
		padding: 1rpx;
		border-radius: 15rpx;
		margin-right: 32rpx;
		height: 212rpx;
}
.imgContainer image {
		width: 210rpx;
		height: 210rpx;
		border-radius: 15rpx;
}
.store {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
}
.store_title {
		font-weight: bold;
		font-size: 32rpx;
}
.store_price {
		color: #7b7b7b;
		display: flex;
		flex-direction: row;
		height: 36rpx;
		align-items: center;
}
.text-tiao {
		font-size: 24rpx;
		padding-left: 15rpx;
}
.text-price {
		font-size: 26rpx;
		font-weight: bold;
		padding-left: 15rpx;
		color: #ff6633;
}
.store_taste {
		font-size: 26rpx;
		color: #868686;
		font-weight: 200;
}
.store_type {
		font-size: 26rpx;
		color: #868686;
		font-weight: 200;
}
.content-show {
		border-bottom: 1px solid #ddd;
		font-size: 24rpx;
}
.content-show image {
		width: 24rpx;
		height: 24rpx;
		padding-right: 12rpx;
}
.content-show image:nth-child(2) {
		margin-left: 42rpx;
}
.content-show image:nth-child(3) {
		margin-left: 42rpx;
}
.content-show image:nth-child(4) {
		margin-left: 60rpx;
}
.local {
		height: 103rpx;
		display: block;
		line-height: 103rpx;
}
.position {
		display: flex;
		flex-direction: row;
		margin-top: 24rpx;
		margin-bottom: 24rpx;
}
.position image {
		width: 42rpx;
		height: 28rpx;
		margin-top: 8rpx;
		margin-right: 10rpx;
}
.text-content {}
.text-pos {
		font-size: 24rpx;
		line-height: 32rpx;
}

